
resource "aws_iam_role" "create_user_role" {
  name = "${var.RESOURCES_PREFIX}_CREATE_USER"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Principal = {
          Service = "lambda.amazonaws.com"
        }
        Action = "sts:AssumeRole"
      }
    ]
  })
}